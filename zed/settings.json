// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  //# AI
  "git_panel": {
    "sort_by_path": true
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },

  "agent": {
    "always_allow_tool_actions": true,
    "play_sound_when_agent_done": true,
    "default_profile": "write"
  },

  //# General
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "VSCode Dark Polished",
    "dark": "VSCode Dark Modern"
  },
  "icon_theme": "Material Icon Theme",

  //# Keybindings
  "base_keymap": "VSCode",

  //# Vim
  "vim_mode": true,
  "cursor_blink": false,
  "relative_line_numbers": true,
  "scrollbar": { "show": "never" },
  "scroll_beyond_last_line": "off", // Prevent the buffer from scrolling beyond the last line
  "vertical_scroll_margin": 0, // Allow the cursor to reach the edges of the screen

  //# Editor
  "autosave": "off",
  "buffer_font_family": "CaskaydiaCove Nerd Font",
  "buffer_font_fallbacks": ["Nerd Font"],

  //# Terminal
  "terminal": {
    "font_size": 14,
    "font_family": "CaskaydiaCove Nerd Font Mono",
    "font_fallbacks": ["Nerd Font Mono"],
    "shell": "system",
    "button": false, // Control to show or hide the terminal button in the status bar
    "working_directory": "current_project_directory",
    "line_height": "standard"
  },

  //# Language Server Protocol
  "lsp": {
    //# Rust
    "rust-analyzer": {
      "initialization_options": {
        "rust": {
          "analyzerTargetDir": true
        },
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        }
      }
    }
  }
}
